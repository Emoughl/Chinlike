@model Chinlike.Models.Product
@{
    ViewBag.Title = "Xoasanpham";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div style="margin-left: 200px; margin-top : 100px;">
    <h2>Xóa Sản Phẩm</h2>

    <h3>Bạn Chắc Chắn Muốn Xóa Sản Phẩm Này Chứ ? </h3>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Mã Sản Phẩm :
        </dt>
        <dd>
            @Model.MaP
        </dd>
        <dt>
            Tên Sản Phẩm :
        </dt>
        <dd>
            @Model.TenP
        </dd>

        <dt>
            Mô Tả :
        </dt>

        <dd>
            @Model.MoTa
        </dd>

        <dt>
            Ảnh Bìa :
        </dt>

        <dd>
            <img width="200" src="~/assets/img/ImagesBody/@Model.Anh" />
        </dd>

        <dt>
            Giá Bán
        </dt>

        <dd>
            @Model.Gia
        </dd>

        <dt>
            Số Lượng
        </dt>

        <dd>
            @Model.SoLuong
        </dd>

        <dt>
            Ngày Cập Nhật :
        </dt>

        <dd>
            @String.Format("{0:dd/MM/yyyy}", @Model.NgayCapNhat)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color" style="margin-left: 900px;">
            <input type="submit" value="Xóa" class="btn btn-default" /> |
            @Html.ActionLink("Trở Về", "Sanpham")
        </div>
    }
</div>

