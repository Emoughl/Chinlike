@model Chinlike.Models.Product

@{
    ViewBag.Title = "Suasanpham";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div style="margin-left: 200px; margin-top : 100px;">
    <h2>Sửa Truyện</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.MaP)
            <div class="form-group">
                Mã Sản Phẩm
                <div class="col-md-10">
                    <div style="font:18px; padding: 5px 0 0 5px">@Model.MaP</div>
                </div>
            </div>
            <div class="form-group">
                Tên Sản Phẩm
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TenP, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TenP, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                Mô Tả
                <div class="col-md-10">
                    <textarea cols="100" rows="10" name="Mota">@Model.MoTa</textarea>
                </div>
            </div>

            <div class="form-group">
                Ảnh Bìa
                <div class="col-md-10">
                    Chọn Ảnh Mới
                    <input type="file" name="fileUpload" />
                    <img src="@Url.Content("~/assets/img/ImagesBody/"+ Model.Anh)" width="120px" /> (Ảnh Hiện Tại)
                    @ViewBag.Thongbao
                </div>
            </div>

            <div class="form-group">
                Giá Bán
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Gia, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Gia, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                Số Lượng
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SoLuong, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SoLuong, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                Ngày Cập Nhật
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NgayCapNhat, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NgayCapNhat, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Lưu" class="btn btn-default" />
                    | @Html.ActionLink("Trở lại", "SanPham")
                </div>
            </div>
        </div>
    }
</div>


