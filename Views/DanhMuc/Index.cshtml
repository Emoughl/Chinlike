@model IEnumerable<Chinlike.Models.DanhMuc>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div style="margin-left: 400px; margin-top : 200px;">
    <h2 style="color: red;">QUẢN LÝ DANH SÁCH DANH MỤC</h2>

    <p>
        @Html.ActionLink("THÊM MỚI", "Create")
    </p>
    <table class="table">


        <tr>
            <th>
                MÃ DANH MỤC
            </th>

            <th>
                TÊN DANH MỤC
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MaDM)

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TenDM)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.MaDM }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.MaDM })
                </td>
            </tr>
        }

    </table>
</div>


