@model IEnumerable<Chinlike.Models.Product>
<div class="bg-gray-200 space-2 space-lg-3" id="bo-suu-tap">
    <div class="container ">
        <div class="d-md-flex justify-content-between">
            <header class="mb-4">
                <h2 class="font-size-7" style="color: cornflowerblue;">Bộ Sưu Tập Mới</h2>
            </header>
            <select class="js-select selectpicker dropdown-select orderby" name="orderby" data-style="border-bottom shadow-none outline-none py-2" style="border: #ffffff">
                <option value="#" selected="selected">Bộ Sưu Tập</option>
                <option value="/Body/IDNew/1">Tuần</option>
                <option value="/Body/IDNew/2">Tháng</option>
                <option value="/Body/IDNew/3">Năm</option>
            </select>
            <script>
                window.addEventListener('load', () => {
                    $('#bo-suu-tap select[name="orderby"]').change(e => {
                        e.preventDefault();
                        $.ajax({
                            url: e.target.value,
                            dataType: 'html',
                            success: raw => {
                                const body = $(document.createElement('div').outerHTML).html(raw).find('#bo-suu-tap .products').html();
                                $('#bo-suu-tap .products').html(body);
                            },
                        });
                    });
                });
            </script>
        </div>
        <div class="tab-content">
            <div class="tab-pane fade show active" id="example1" role="tabpanel" aria-labelledby="example1-tab">
                <ul class="products list-unstyled row no-gutters row-cols-2 row-cols-md-3 row-cols-lg-4 row-cols-wd-6 border-top border-left my-0">
                    @foreach (var product in Model)
                    {
                        <li class="product col">
                            <div class="product__inner overflow-hidden bg-white p-3 p-md-4d875">
                                <div class="woocommerce-LoopProduct-link woocommerce-loop-product__link d-block position-relative">
                                    <div class="woocommerce-loop-product__thumbnail">
                                        <a href="@Url.Action("Chitietsanpham", "Body", new { id = product.MaP })" class="d-block"><img src="~/assets/img/ImagesBody/@product.Anh" style="height: 150px;" class="img-fluid d-block mx-auto attachment-shop_catalog size-shop_catalog wp-post-image img-fluid" alt="image-description" title="@product.MoTa"></a>

                                    </div>
                                    <div class="woocommerce-loop-product__body product__body pt-3 bg-white">
                                        <h2 class="woocommerce-loop-product__title product__title h6 text-lh-md mb-1 text-height-2 crop-text-2 h-dark"><span>@product.TenP</span> </h2>
                                        <div class="price d-flex align-items-center font-weight-medium font-size-3">
                                            <span class="woocommerce-Price-amount amount"><span class="woocommerce-Price-currencySymbol"></span>@product.Gia</span>.000đ
                                        </div>
                                    </div>
                                    <div class="product__hover d-flex align-items-center">
                                        <a href="@Url.Action("ThemGiohang", "GioHang", new { @iMaP = product.MaP, @strURL = Request.Url.ToString() })" class="text-uppercase text-dark h-dark font-weight-medium mr-auto" data-toggle="tooltip" data-placement="right" title="MUA NGAY">
                                            <span class="product__add-to-cart">MUA NGAY</span>
                                            <span class="product__add-to-cart-icon font-size-4"><i class="flaticon-icon-126515"></i></span>
                                        </a>
                                        <a href="@Url.Action("ThemSanPhamThich","Thich", new { @iMaP = product.MaP, @strURL = Request.Url.ToString() })" class="h-p-bg btn btn-outline-primary border-0">
                                            <i class="flaticon-heart"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>