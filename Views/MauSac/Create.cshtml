@model Chinlike.Models.MauSac
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div style="margin-left: 400px; margin-top : 200px;">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>THÊM MỚI MÀU SẮC</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                Mã Màu
                <div class="col-md-10">
                    @Html.EditorFor(model => model.MaMau, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MaMau, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                Tên Danh Mục
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TenMau, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TenMau, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Cập Nhật" class="btn btn-default" />
                    | @Html.ActionLink("Quay Lại", "Index")
                </div>
            </div>
        </div>
    }
</div>

